@page
@using System.Security.Claims
@using CvWebApp.Models
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<button class="btn btn-success mb-3"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#addNoteForm"
        aria-expanded="false"
        aria-controls="addNoteForm">
    + Dodaj nową notatkę
</button>

<div class="collapse" id="addNoteForm">
    <div class="card card-body mb-4">
        <form method="post" asp-page-handler="Create">
            <div class="mb-3">
                <label asp-for="NewNote.Title" class="form-label">Tytuł</label>
                <input asp-for="NewNote.Title" class="form-control" placeholder="Wpisz tytuł..." />
                <span asp-validation-for="NewNote.Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewNote.Description" class="form-label">Opis</label>
                <textarea asp-for="NewNote.Description" class="form-control" rows="3" placeholder="Wpisz opis..."></textarea>
                <span asp-validation-for="NewNote.Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary me-2">
                Zapisz notatkę
            </button>
            <button type="reset" class="btn btn-secondary">
                Wyczyść
            </button>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Message))
{
    var alertClass = Model.MessageType switch
    {
        MessageType.AddSucceeded => "alert-success",
        MessageType.DeleteSucceeded => "alert-danger",
        _ => "alert-info"
    };

    <div class="alert @alertClass alert-dismissible fade show mt-3" role="alert">
        @Model.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<hr />

<h3 class="mt-4 mb-3">Twoje notatki</h3>

<div class="row row-cols-1 row-cols-md-3 g-3">
    @for (var i = 0; i < Model.NoteViews.Count; i++)
    {
        var note = Model.NoteViews[i];

        <div class="col d-flex">
            <div class="card flex-fill shadow-sm">
                <div class="card-body">

                    @if (@note.IsEditing)
                    {
                        <!-- TRYB EDYCJI: TextBoxy zamiast tekstu -->
                        <form method="post">
                            <input type="hidden" asp-for="NewNote.Id"  />

                            <div class="mb-2">
                                <input class="form-control"
                                       asp-for=NewNote.Title />
                            </div>

                            <div class="mb-2">
                                <textarea class="form-control" rows="3"
                                          asp-for="NewNote.Description"></textarea>
                            </div>

                            <button type="submit"
                                    class="btn btn-sm btn-success d-flex align-items-center justify-content-center px-3"
                                    asp-page-handler="EditSave"
                                    asp-route-id="@note.Id">
                                Zapisz
                            </button>
                        </form>
                    }
                    else
                    {
                        <!-- TWÓJ DOTYCHCZASOWY WIDOK -->
                        <h5 class="card-title">@note.Title</h5>
                        <p class="card-text text-muted">
                            @note.Description
                        </p>
                    }

                </div>
                <div class="card-footer small text-muted">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span>@note.UpdateTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</span>
                        </div>

                        <div class="d-flex gap-2">
                            @if (!note.IsEditing)
                            {
                                <!-- Edytuj przełącza w tryb inline-edita -->
                                <form method="post" asp-page-handler="Edit" asp-route-id="@note.Id" class="d-inline">
                                    <button type="submit"
                                            class="btn btn-sm btn-primary d-flex align-items-center justify-content-center px-3">
                                        Edytuj
                                    </button>
                                </form>

                                <form method="post" asp-page-handler="Delete" asp-route-id="@note.Id" class="d-inline">
                                    <button type="submit"
                                            class="btn btn-sm btn-outline-danger d-flex align-items-center justify-content-center px-3"
                                            onclick="return confirm('Usunąć tę notatkę?');">
                                        Usuń
                                    </button>
                                </form>
                            }
                            else
                            {
                                <!-- W trybie edycji przycisk Zapisz jest przy polach, więc tu nic -->
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-wyczyść po sukcesie
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <text>
                setTimeout(() => {
                    document.querySelector('.alert').style.transition = 'opacity 0.5s';
                    document.querySelector('.alert').style.opacity = '0';
                    setTimeout(() => document.querySelector('.alert').remove(), 500);
                }, 3000);
            </text>
        }
    </script>
}
